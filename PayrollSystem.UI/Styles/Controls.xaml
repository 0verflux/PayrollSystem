<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ic="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <Style x:Key="IconXSmall" TargetType="ic:PackIconMaterial">
        <Setter Property="Height" Value="8"/>
        <Setter Property="Width" Value="8"/>
    </Style>
    
    <Style x:Key="IconSmall"  TargetType="ic:PackIconMaterial">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Width" Value="12"/>
    </Style>

    <Style x:Key="IconNormal"  TargetType="ic:PackIconMaterial">
        <Setter Property="Height" Value="18"/>
        <Setter Property="Width" Value="18"/>
    </Style>
    <Style x:Key="IconLarge"  TargetType="ic:PackIconMaterial">
        <Setter Property="Height" Value="24"/>
        <Setter Property="Width" Value="24"/>
    </Style>
    <Style x:Key="IconXLarge"  TargetType="ic:PackIconMaterial">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Width" Value="48"/>
    </Style>
</ResourceDictionary>